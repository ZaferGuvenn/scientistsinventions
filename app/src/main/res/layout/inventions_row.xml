<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="com.lafimsize.bilimnsanlarvebulular.adapter.IOnClickListener" />

        <variable
            name="inventions"
            type="com.lafimsize.bilimnsanlarvebulular.model.Inventions" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inventionsRowConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/shape6"
        android:paddingHorizontal="10dp"

        android:paddingVertical="10dp"


        >

        <ImageView
            android:id="@+id/InventionsImage"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"

            android:background="#3F3A43"
            android:contentDescription="Invention Image"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"

            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/InventionsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="2dp"
            android:background="@color/black"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="@{inventions.inventionName}"

            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="16sp"
            android:textStyle="bold"


            app:layout_constraintEnd_toEndOf="@+id/InventionsImage"
            app:layout_constraintStart_toStartOf="@+id/InventionsImage"
            app:layout_constraintTop_toBottomOf="@+id/InventionsImage" />

        <TextView
            android:id="@+id/InventionsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@{inventions.inventionDate}"
            android:textColor="@color/black"
            android:textSize="18sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/InventionsName"
            app:layout_constraintStart_toStartOf="@+id/InventionsName"
            app:layout_constraintTop_toBottomOf="@+id/InventionsName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>