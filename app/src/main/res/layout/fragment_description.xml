       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem Lorem deneme test deneme Lorem deneme test deneme Lorem deneme test deneme Lorem Lorem Lorem Lorem Lorem Lorem"
       android:textAlignment="center"
       android:paddingHorizontal="20dp"
       android:paddingVertical="5dp"
       android:textSize="18sp"

       app:layout_constraintTop_toBottomOf="@+id/InventionsScientist"
       app:layout_constraintStart_toStartOf="@+id/imageView"
       app:layout_constraintEnd_toEndOf="@+id/imageView"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>